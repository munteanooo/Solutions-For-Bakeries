<!DOCTYPE html>
<html lang="ro">
<head>
     <meta charset="utf-8" />
     <meta name="viewport" content="width=device-width, initial-scale=1.0" />
     <title>@ViewData["Title"] - Logistics of a Bakery</title>
     <script src="https://cdn.tailwindcss.com"></script>
     <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
     <script>
          tailwind.config = {
               theme: {
                    extend: {
                         colors: {
                              'bakery-gold': '#D4A574',
                              'bakery-brown': '#8B4513',
                              'bakery-cream': '#FFF8DC'
                         }
                    }
               }
          }
     </script>
</head>
<body class="bg-gray-50">
     <!-- Navigation -->
     <nav class="bg-white shadow-lg sticky top-0 z-50">
          <div class="max-w-7xl mx-auto px-4">
               <div class="flex justify-between items-center py-4">
                    <div class="flex items-center space-x-2">
                         <i class="fas fa-bread-slice text-2xl text-bakery-gold"></i>
                         <span class="text-2xl font-bold text-bakery-brown">Logistics of a Bakery</span>
                    </div>

                    <div class="hidden md:flex items-center space-x-8">
                         <a href="@Url.Action("Index", "Home")" class="text-gray-700 hover:text-bakery-gold transition duration-300">Acasă</a>
                         <a href="@Url.Action("Products", "Home")" class="text-gray-700 hover:text-bakery-gold transition duration-300">Produse</a>
                         <a href="@Url.Action("Solutions", "Home")" class="text-gray-700 hover:text-bakery-gold transition duration-300">Soluții</a>
                         <a href="@Url.Action("About", "Home")" class="text-gray-700 hover:text-bakery-gold transition duration-300">Despre Noi</a>
                         <a href="@Url.Action("Contact", "Home")" class="text-gray-700 hover:text-bakery-gold transition duration-300">Contact</a>
                         <a href="@Url.Action("Help", "Home")" class="text-gray-700 hover:text-bakery-gold transition duration-300">Ajutor</a>
                         <a href="@Url.Action("Cart", "Home")" class="relative text-gray-700 hover:text-bakery-gold transition duration-300">
                              <i class="fas fa-shopping-cart text-xl"></i>
                              <span class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">3</span>
                         </a>
                    </div>

                    <!-- Mobile menu button -->
                    <div class="md:hidden">
                         <button id="mobile-menu-button" class="text-gray-700 hover:text-bakery-gold">
                              <i class="fas fa-bars text-xl"></i>
                         </button>
                    </div>
               </div>

               <!-- Mobile menu -->
               <div id="mobile-menu" class="hidden md:hidden pb-4">
                    <a href="@Url.Action("Index", "Home")" class="block py-2 text-gray-700 hover:text-bakery-gold">Acasă</a>
                    <a href="@Url.Action("Products", "Home")" class="block py-2 text-gray-700 hover:text-bakery-gold">Produse</a>
                    <a href="@Url.Action("Solutions", "Home")" class="block py-2 text-gray-700 hover:text-bakery-gold">Soluții</a>
                    <a href="@Url.Action("About", "Home")" class="block py-2 text-gray-700 hover:text-bakery-gold">Despre Noi</a>
                    <a href="@Url.Action("Contact", "Home")" class="block py-2 text-gray-700 hover:text-bakery-gold">Contact</a>
                    <a href="@Url.Action("Help", "Home")" class="block py-2 text-gray-700 hover:text-bakery-gold">Ajutor</a>
                    <a href="@Url.Action("Cart", "Home")" class="block py-2 text-gray-700 hover:text-bakery-gold">Coș</a>
               </div>
          </div>
     </nav>

     <main>
          @RenderBody()
     </main>

     <!-- Footer -->
     <footer class="bg-bakery-brown text-white mt-16">
          <div class="max-w-7xl mx-auto px-4 py-12">
               <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                    <div>
                         <div class="flex items-center space-x-2 mb-4">
                              <i class="fas fa-bread-slice text-2xl text-bakery-gold"></i>
                              <span class="text-xl font-bold">Logistics of a Bakery</span>
                         </div>
                         <p class="text-gray-300">Soluții complete de logistică pentru brutării moderne.</p>
                    </div>

                    <div>
                         <h3 class="text-lg font-semibold mb-4">Servicii</h3>
                         <ul class="space-y-2 text-gray-300">
                              <li><a href="#" class="hover:text-bakery-gold">Managementul Stocurilor</a></li>
                              <li><a href="#" class="hover:text-bakery-gold">Distribuție</a></li>
                              <li><a href="#" class="hover:text-bakery-gold">Consultanță</a></li>
                              <li><a href="#" class="hover:text-bakery-gold">Automatizare</a></li>
                         </ul>
                    </div>

                    <div>
                         <h3 class="text-lg font-semibold mb-4">Contact</h3>
                         <ul class="space-y-2 text-gray-300">
                              <li><i class="fas fa-phone mr-2"></i>+40 123 456 789</li>
                              <li><i class="fas fa-envelope mr-2"></i>info@logisticsbakery.ro</li>
                              <li><i class="fas fa-map-marker-alt mr-2"></i>București, România</li>
                         </ul>
                    </div>

                    <div>
                         <h3 class="text-lg font-semibold mb-4">Urmărește-ne</h3>
                         <div class="flex space-x-4">
                              <a href="#" class="text-gray-300 hover:text-bakery-gold"><i class="fab fa-facebook text-xl"></i></a>
                              <a href="#" class="text-gray-300 hover:text-bakery-gold"><i class="fab fa-instagram text-xl"></i></a>
                              <a href="#" class="text-gray-300 hover:text-bakery-gold"><i class="fab fa-linkedin text-xl"></i></a>
                         </div>
                    </div>
               </div>

               <div class="border-t border-gray-600 mt-8 pt-8 text-center text-gray-300">
                    <p>&copy; 2024 Logistics of a Bakery. Toate drepturile rezervate.</p>
               </div>
          </div>
     </footer>

     <script>
          document.getElementById('mobile-menu-button').addEventListener('click', function () {
               const mobileMenu = document.getElementById('mobile-menu');
               mobileMenu.classList.toggle('hidden');
          });
     </script>
</body>
</html>  
