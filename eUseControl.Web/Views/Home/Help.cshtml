@{
     ViewData["Title"] = "Ajutor";
}

<div class="bg-gray-50 min-h-screen">
     <!-- Header -->
     <section class="bg-bakery-cream py-16">
          <div class="max-w-7xl mx-auto px-4 text-center">
               <h1 class="text-4xl md:text-5xl font-bold text-bakery-brown mb-4">Centrul de Ajutor</h1>
               <p class="text-xl text-gray-700 max-w-3xl mx-auto">
                    Găsește răspunsuri la întrebările tale sau contactează echipa noastră de suport
               </p>
          </div>
     </section>

     <!-- Search -->
     <section class="py-8 bg-white">
          <div class="max-w-4xl mx-auto px-4">
               <div class="relative">
                    <input type="text" placeholder="Caută în baza de cunoștințe..." class="w-full px-6 py-4 text-lg border border-gray-300 rounded-xl focus:ring-2 focus:ring-bakery-gold focus:border-transparent pl-12">
                    <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
               </div>
          </div>
     </section>

     <div class="max-w-7xl mx-auto px-4 py-12">
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
               <!-- FAQ Categories -->
               <div class="lg:col-span-2">
                    <h2 class="text-3xl font-bold text-bakery-brown mb-8">Întrebări Frecvente</h2>

                    <!-- Category: Getting Started -->
                    <div class="bg-white rounded-xl shadow-lg mb-6">
                         <div class="p-6 border-b border-gray-200">
                              <h3 class="text-xl font-bold text-bakery-brown flex items-center">
                                   <i class="fas fa-play-circle text-bakery-gold mr-3"></i>
                                   Primii Pași
                              </h3>
                         </div>
                         <div class="p-6 space-y-4">
                              <div class="border-b border-gray-100 pb-4">
                                   <button class="w-full text-left font-semibold text-gray-800 hover:text-bakery-gold transition" onclick="toggleFAQ('faq1')">
                                        Cum încep să folosesc serviciile voastre?
                                        <i class="fas fa-chevron-down float-right mt-1"></i>
                                   </button>
                                   <div id="faq1" class="hidden mt-3 text-gray-600">
                                        Pentru a începe, contactează-ne prin formularul de contact sau sună la +373 60505613. Echipa noastră va programa o consultație gratuită pentru a înțelege nevoile tale specifice și a propune soluția optimă.
                                   </div>
                              </div>

                              <div class="border-b border-gray-100 pb-4">
                                   <button class="w-full text-left font-semibold text-gray-800 hover:text-bakery-gold transition" onclick="toggleFAQ('faq2')">
                                        Cât durează implementarea sistemului?
                                        <i class="fas fa-chevron-down float-right mt-1"></i>
                                   </button>
                                   <div id="faq2" class="hidden mt-3 text-gray-600">
                                        Durata implementării variază în funcție de complexitatea brutăriei tale. În general, pentru o brutărie mică-medie, implementarea durează 2-4 săptămâni, iar pentru operațiuni mai mari poate dura 6-8 săptămâni.
                                   </div>
                              </div>

                              <div class="pb-4">
                                   <button class="w-full text-left font-semibold text-gray-800 hover:text-bakery-gold transition" onclick="toggleFAQ('faq3')">
                                        Ce training oferiti echipei mele?
                                        <i class="fas fa-chevron-down float-right mt-1"></i>
                                   </button>
                                   <div id="faq3" class="hidden mt-3 text-gray-600">
                                        Oferim training complet pentru toată echipa ta, incluzând sesiuni practice, materiale educaționale și suport continuu. Training-ul este adaptat nevoilor specifice ale brutăriei tale.
                                   </div>
                              </div>
                         </div>
                    </div>

                    <!-- Category: Technical Support -->
                    <div class="bg-white rounded-xl shadow-lg mb-6">
                         <div class="p-6 border-b border-gray-200">
                              <h3 class="text-xl font-bold text-bakery-brown flex items-center">
                                   <i class="fas fa-cog text-bakery-gold mr-3"></i>
                                   Suport Tehnic
                              </h3>
                         </div>
                         <div class="p-6 space-y-4">
                              <div class="border-b border-gray-100 pb-4">
                                   <button class="w-full text-left font-semibold text-gray-800 hover:text-bakery-gold transition" onclick="toggleFAQ('faq4')">
                                        Ce fac dacă sistemul nu funcționează?
                                        <i class="fas fa-chevron-down float-right mt-1"></i>
                                   </button>
                                   <div id="faq4" class="hidden mt-3 text-gray-600">
                                        Avem suport tehnic 24/7. Poți suna la linia de urgență +373 60505613 sau trimite un email la support@logisticsbakery.ro. Timpul mediu de răspuns este sub 15 minute.
                                   </div>
                              </div>

                              <div class="border-b border-gray-100 pb-4">
                                   <button class="w-full text-left font-semibold text-gray-800 hover:text-bakery-gold transition" onclick="toggleFAQ('faq5')">
                                        Cum actualizez sistemul?
                                        <i class="fas fa-chevron-down float-right mt-1"></i>
                                   </button>
                                   <div id="faq5" class="hidden mt-3 text-gray-600">
                                        Actualizările se fac automat în cloud. Pentru sistemele on-premise, echipa noastră se ocupă de toate actualizările în afara orelor de lucru pentru a nu întrerupe operațiunile.
                                   </div>
                              </div>

                              <div class="pb-4">
                                   <button class="w-full text-left font-semibold text-gray-800 hover:text-bakery-gold transition" onclick="toggleFAQ('faq6')">
                                        Pot integra sistemul cu alte aplicații?
                                        <i class="fas fa-chevron-down float-right mt-1"></i>
                                   </button>
                                   <div id="faq6" class="hidden mt-3 text-gray-600">
                                        Da, sistemul nostru are API-uri robuste și poate fi integrat cu majoritatea sistemelor de contabilitate, POS și alte aplicații business. Echipa noastră te va ajuta cu integrările.
                                   </div>
                              </div>
                         </div>
                    </div>

                    <!-- Category: Billing -->
                    <div class="bg-white rounded-xl shadow-lg mb-6">
                         <div class="p-6 border-b border-gray-200">
                              <h3 class="text-xl font-bold text-bakery-brown flex items-center">
                                   <i class="fas fa-credit-card text-bakery-gold mr-3"></i>
                                   Facturare și Plăți
                              </h3>
                         </div>
                         <div class="p-6 space-y-4">
                              <div class="border-b border-gray-100 pb-4">
                                   <button class="w-full text-left font-semibold text-gray-800 hover:text-bakery-gold transition" onclick="toggleFAQ('faq7')">
                                        Care sunt opțiunile de plată?
                                        <i class="fas fa-chevron-down float-right mt-1"></i>
                                   </button>
                                   <div id="faq7" class="hidden mt-3 text-gray-600">
                                        Acceptăm plăți prin transfer bancar, card de credit/debit, PayPal și facturare lunară. Pentru contracte anuale oferim reduceri semnificative.
                                   </div>
                              </div>

                              <div class="border-b border-gray-100 pb-4">
                                   <button class="w-full text-left font-semibold text-gray-800 hover:text-bakery-gold transition" onclick="toggleFAQ('faq8')">
                                        Pot anula contractul oricând?
                                        <i class="fas fa-chevron-down float-right mt-1"></i>
                                   </button>
                                   <div id="faq8" class="hidden mt-3 text-gray-600">
                                        Da, poți anula contractul cu o notificare de 30 de zile. Nu există penalități de anulare, iar datele tale vor fi exportate în format standard.
                                   </div>
                              </div>

                              <div class="pb-4">
                                   <button class="w-full text-left font-semibold text-gray-800 hover:text-bakery-gold transition" onclick="toggleFAQ('faq9')">
                                        Există costuri ascunse?
                                        <i class="fas fa-chevron-down float-right mt-1"></i>
                                   </button>
                                   <div id="faq9" class="hidden mt-3 text-gray-600">
                                        Nu, toate costurile sunt transparente și comunicate din start. Singurele costuri suplimentare pot apărea pentru customizări speciale solicitate de tine.
                                   </div>
                              </div>
                         </div>
                    </div>
               </div>

               <!-- Contact Support -->
               <div class="lg:col-span-1">
                    <div class="bg-white rounded-xl shadow-lg p-6 sticky top-4">
                         <h3 class="text-xl font-bold text-bakery-brown mb-6">Ai nevoie de ajutor?</h3>

                         <div class="space-y-4 mb-6">
                              <div class="flex items-center space-x-3 p-4 bg-green-50 rounded-lg">
                                   <div class="bg-green-500 text-white p-2 rounded-full">
                                        <i class="fas fa-phone"></i>
                                   </div>
                                   <div>
                                        <div class="font-semibold text-green-800">Suport Telefonic</div>
                                        <div class="text-sm text-green-600">24/7 disponibil</div>
                                        <div class="font-bold">+40 123 456 789</div>
                                   </div>
                              </div>

                              <div class="flex items-center space-x-3 p-4 bg-blue-50 rounded-lg">
                                   <div class="bg-blue-500 text-white p-2 rounded-full">
                                        <i class="fas fa-envelope"></i>
                                   </div>
                                   <div>
                                        <div class="font-semibold text-blue-800">Email Support</div>
                                        <div class="text-sm text-blue-600">Răspuns în 2 ore</div>
                                        <div class="font-bold text-sm">support@logisticsbakery.ro</div>
                                   </div>
                              </div>

                              <div class="flex items-center space-x-3 p-4 bg-purple-50 rounded-lg">
                                   <div class="bg-purple-500 text-white p-2 rounded-full">
                                        <i class="fas fa-comments"></i>
                                   </div>
                                   <div>
                                        <div class="font-semibold text-purple-800">Live Chat</div>
                                        <div class="text-sm text-purple-600">Luni-Vineri 8-18</div>
                                        <button class="bg-purple-500 text-white px-3 py-1 rounded text-sm mt-1 hover:bg-purple-600 transition">
                                             Începe Chat
                                        </button>
                                   </div>
                              </div>
                         </div>

                         <!-- Quick Links -->
                         <div class="border-t pt-6">
                              <h4 class="font-semibold text-bakery-brown mb-4">Link-uri Utile</h4>
                              <ul class="space-y-2">
                                   <li><a href="#" class="text-bakery-gold hover:underline">Ghid de Utilizare</a></li>
                                   <li><a href="#" class="text-bakery-gold hover:underline">Video Tutoriale</a></li>
