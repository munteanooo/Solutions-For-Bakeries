@{
     ViewData["Title"] = "Coș de Cumpărături";
}

<div class="bg-gray-50 min-h-screen">
     <!-- Header -->
     <section class="bg-bakery-cream py-16">
          <div class="max-w-7xl mx-auto px-4 text-center">
               <h1 class="text-4xl md:text-5xl font-bold text-bakery-brown mb-4">Coșul Tău de Cumpărături</h1>
               <p class="text-xl text-gray-700">Revizuiește și finalizează comanda ta</p>
          </div>
     </section>

     <div class="max-w-7xl mx-auto px-4 py-12">
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
               <!-- Cart Items -->
               <div class="lg:col-span-2">
                    <div class="bg-white rounded-xl shadow-lg p-6">
                         <h2 class="text-2xl font-bold text-bakery-brown mb-6">Produse în Coș (3 articole)</h2>

                         <!-- Cart Item 1 -->
                         <div class="flex items-center space-x-4 py-6 border-b border-gray-200">
                              <img src="/placeholder.svg?height=100&width=100" alt="Pâine albă" class="w-20 h-20 object-cover rounded-lg">
                              <div class="flex-1">
                                   <h3 class="text-lg font-semibold text-bakery-brown">Pâine Albă Clasică</h3>
                                   <p class="text-gray-600">Pâine tradițională, perfectă pentru micul dejun</p>
                                   <div class="flex items-center space-x-4 mt-2">
                                        <div class="flex items-center space-x-2">
                                             <button class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center hover:bg-gray-300">
                                                  <i class="fas fa-minus text-sm"></i>
                                             </button>
                                             <span class="w-12 text-center font-semibold">2</span>
                                             <button class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center hover:bg-gray-300">
                                                  <i class="fas fa-plus text-sm"></i>
                                             </button>
                                        </div>
                                        <span class="text-lg font-bold text-bakery-gold">12.50 RON</span>
                                   </div>
                              </div>
                              <button class="text-red-500 hover:text-red-700 p-2">
                                   <i class="fas fa-trash"></i>
                              </button>
                         </div>

                         <!-- Cart Item 2 -->
                         <div class="flex items-center space-x-4 py-6 border-b border-gray-200">
                              <img src="/placeholder.svg?height=100&width=100" alt="Croissant" class="w-20 h-20 object-cover rounded-lg">
                              <div class="flex-1">
                                   <h3 class="text-lg font-semibold text-bakery-brown">Croissant cu Unt</h3>
                                   <p class="text-gray-600">Croissant franțuzesc autentic, crocant și delicios</p>
                                   <div class="flex items-center space-x-4 mt-2">
                                        <div class="flex items-center space-x-2">
                                             <button class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center hover:bg-gray-300">
                                                  <i class="fas fa-minus text-sm"></i>
                                             </button>
                                             <span class="w-12 text-center font-semibold">4</span>
                                             <button class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center hover:bg-gray-300">
                                                  <i class="fas fa-plus text-sm"></i>
                                             </button>
                                        </div>
                                        <span class="text-lg font-bold text-bakery-gold">8.50 RON</span>
                                   </div>
                              </div>
                              <button class="text-red-500 hover:text-red-700 p-2">
                                   <i class="fas fa-trash"></i>
                              </button>
                         </div>

                         <!-- Cart Item 3 -->
                         <div class="flex items-center space-x-4 py-6">
                              <img src="/placeholder.svg?height=100&width=100" alt="Baguette" class="w-20 h-20 object-cover rounded-lg">
                              <div class="flex-1">
                                   <h3 class="text-lg font-semibold text-bakery-brown">Baguette Franceză</h3>
                                   <p class="text-gray-600">Pâine lungă tradițională, perfectă pentru sandvișuri</p>
                                   <div class="flex items-center space-x-4 mt-2">
                                        <div class="flex items-center space-x-2">
                                             <button class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center hover:bg-gray-300">
                                                  <i class="fas fa-minus text-sm"></i>
                                             </button>
                                             <span class="w-12 text-center font-semibold">1</span>
                                             <button class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center hover:bg-gray-300">
                                                  <i class="fas fa-plus text-sm"></i>
                                             </button>
                                        </div>
                                        <span class="text-lg font-bold text-bakery-gold">10.00 RON</span>
                                   </div>
                              </div>
                              <button class="text-red-500 hover:text-red-700 p-2">
                                   <i class="fas fa-trash"></i>
                              </button>
                         </div>

                         <!-- Continue Shopping -->
                         <div class="mt-6 pt-6 border-t border-gray-200">
                              <a href="@Url.Action("Products", "Home")" class="text-bakery-gold hover:text-yellow-600 font-semibold">
                                   <i class="fas fa-arrow-left mr-2"></i>Continuă Cumpărăturile
                              </a>
                         </div>
                    </div>
               </div>

               <!-- Order Summary -->
               <div class="lg:col-span-1">
                    <div class="bg-white rounded-xl shadow-lg p-6 sticky top-4">
                         <h2 class="text-2xl font-bold text-bakery-brown mb-6">Sumar Comandă</h2>

                         <div class="space-y-4 mb-6">
                              <div class="flex justify-between">
                                   <span class="text-gray-600">Subtotal (7 produse)</span>
                                   <span class="font-semibold">59.00 RON</span>
                              </div>
                              <div class="flex justify-between">
                                   <span class="text-gray-600">Livrare</span>
                                   <span class="font-semibold">15.00 RON</span>
                              </div>
                              <div class="flex justify-between">
                                   <span class="text-gray-600">TVA (19%)</span>
                                   <span class="font-semibold">14.06 RON</span>
                              </div>
                              <div class="border-t pt-4">
                                   <div class="flex justify-between text-lg font-bold">
                                        <span>Total</span>
                                        <span class="text-bakery-gold">88.06 RON</span>
                                   </div>
                              </div>
                         </div>

                         <!-- Promo Code -->
                         <div class="mb-6">
                              <label class="block text-sm font-medium text-gray-700 mb-2">Cod Promoțional</label>
                              <div class="flex space-x-2">
                                   <input type="text" placeholder="Introdu codul" class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bakery-gold focus:border-transparent">
                                   <button class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300 transition">
                                        Aplică
                                   </button>
                              </div>
                         </div>

                         <!-- Checkout Button -->
                         <button class="w-full bg-bakery-gold text-white py-3 px-6 rounded-lg text-lg font-semibold hover:bg-yellow-600 transition duration-300 mb-4">
                              <i class="fas fa-credit-card mr-2"></i>Finalizează Comanda
                         </button>

                         <!-- Payment Methods -->
                         <div class="text-center">
                              <p class="text-sm text-gray-600 mb-3">Acceptăm:</p>
                              <div class="flex justify-center space-x-3">
                                   <i class="fab fa-cc-visa text-2xl text-blue-600"></i>
                                   <i class="fab fa-cc-mastercard text-2xl text-red-600"></i>
                                   <i class="fab fa-paypal text-2xl text-blue-500"></i>
                                   <i class="fas fa-university text-2xl text-gray-600"></i>
                              </div>
                         </div>

                         <!-- Security Badge -->
                         <div class="mt-6 p-4 bg-green-50 rounded-lg">
                              <div class="flex items-center space-x-2">
                                   <i class="fas fa-shield-alt text-green-600"></i>
                                   <span class="text-sm text-green-800 font-semibold">Plată 100% Securizată</span>
                              </div>
                              <p class="text-xs text-green-700 mt-1">Datele tale sunt protejate prin criptare SSL</p>
                         </div>
                    </div>
               </div>
          </div>

          <!-- Recently Viewed -->
          <div class="mt-16">
               <h2 class="text-2xl font-bold text-bakery-brown mb-8">Produse Vizualizate Recent</h2>
               <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
                         <img src="/placeholder.svg?height=200&width=300" alt="Ecler" class="w-full h-32 object-cover">
                         <div class="p-4">
                              <h3 class="font-semibold text-bakery-brown mb-2">Ecler cu Cremă</h3>
                              <div class="flex justify-between items-center">
                                   <span class="text-lg font-bold text-bakery-gold">18.00 RON</span>
                                   <button class="bg-bakery-gold text-white px-3 py-1 rounded text-sm hover:bg-yellow-600 transition">
                                        Adaugă
                                   </button>
                              </div>
                         </div>
                    </div>

                    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
                         <img src="/placeholder.svg?height=200&width=300" alt="Pâine integrală" class="w-full h-32 object-cover">
                         <div class="p-4">
                              <h3 class="font-semibold text-bakery-brown mb-2">Pâine Integrală</h3>
                              <div class="flex justify-between items-center">
                                   <span class="text-lg font-bold text-bakery-gold">15.00 RON</span>
                                   <button class="bg-bakery-gold text-white px-3 py-1 rounded text-sm hover:bg-yellow-600 transition">
                                        Adaugă
                                   </button>
                              </div>
                         </div>
                    </div>

                    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
                         <img src="/placeholder.svg?height=200&width=300" alt="Tort" class="w-full h-32 object-cover">
                         <div class="p-4">
                              <h3 class="font-semibold text-bakery-brown mb-2">Tort Personalizat</h3>
                              <div class="flex justify-between items-center">
                                   <span class="text-lg font-bold text-bakery-gold">120.00 RON</span>
                                   <button class="bg-bakery-gold text-white px-3 py-1 rounded text-sm hover:bg-yellow-600 transition">
                                        Adaugă
                                   </button>
                              </div>
                         </div>
                    </div>

                    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
                         <img src="/placeholder.svg?height=200&width=300" alt="Cozonac" class="w-full h-32 object-cover">
                         <div class="p-4">
                              <h3 class="font-semibold text-bakery-brown mb-2">Cozonac Tradițional</h3>
                              <div class="flex justify-between items-center">
                                   <span class="text-lg font-bold text-bakery-gold">35.00 RON</span>
                                   <button class="bg-bakery-gold text-white px-3 py-1 rounded text-sm hover:bg-yellow-600 transition">
                                        Adaugă
                                   </button>
                              </div>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</div>
