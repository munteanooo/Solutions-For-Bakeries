@{
     ViewData["Title"] = "Produse";
}

<div class="bg-gray-50 min-h-screen">
     <!-- Header -->
     <section class="bg-bakery-cream py-16">
          <div class="max-w-7xl mx-auto px-4 text-center">
               <h1 class="text-4xl md:text-5xl font-bold text-bakery-brown mb-4">Catalogul Nostru de Produse</h1>
               <p class="text-xl text-gray-700 max-w-3xl mx-auto">
                    Descoperă gama completă de produse pentru care oferim soluții de logistică specializată
               </p>
          </div>
     </section>

     <!-- Filters -->
     <section class="py-8 bg-white border-b">
          <div class="max-w-7xl mx-auto px-4">
               <div class="flex flex-wrap gap-4 items-center justify-between">
                    <div class="flex flex-wrap gap-4">
                         <button class="bg-bakery-gold text-white px-4 py-2 rounded-lg">Toate</button>
                         <button class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-bakery-gold hover:text-white transition">Pâine</button>
                         <button class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-bakery-gold hover:text-white transition">Patiserie</button>
                         <button class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-bakery-gold hover:text-white transition">Viennoiserie</button>
                         <button class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-bakery-gold hover:text-white transition">Specialități</button>
                    </div>
                    <div class="flex items-center gap-4">
                         <select class="border border-gray-300 rounded-lg px-4 py-2">
                              <option>Sortează după</option>
                              <option>Preț crescător</option>
                              <option>Preț descrescător</option>
                              <option>Popularitate</option>
                         </select>
                    </div>
               </div>
          </div>
     </section>

     <!-- Products Grid -->
     <section class="py-12">
          <div class="max-w-7xl mx-auto px-4">
               <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
                    <!-- Product 1 -->
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
                         <img src="/placeholder.svg?height=250&width=300" alt="Pâine albă" class="w-full h-48 object-cover">
                         <div class="p-6">
                              <div class="flex items-center justify-between mb-2">
                                   <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">Disponibil</span>
                                   <span class="text-yellow-500">★★★★★</span>
                              </div>
                              <h3 class="text-lg font-semibold text-bakery-brown mb-2">Pâine Albă Clasică</h3>
                              <p class="text-gray-600 text-sm mb-4">Pâine tradițională, perfectă pentru micul dejun</p>
                              <div class="flex justify-between items-center">
                                   <span class="text-xl font-bold text-bakery-gold">12.50 MDL</span>
                                   <button class="bg-bakery-gold text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition duration-300">
                                        <i class="fas fa-cart-plus"></i>
                                   </button>
                              </div>
                         </div>
                    </div>

                    <!-- Product 2 -->
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
                         <img src="/placeholder.svg?height=250&width=300" alt="Pâine integrală" class="w-full h-48 object-cover">
                         <div class="p-6">
                              <div class="flex items-center justify-between mb-2">
                                   <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">Disponibil</span>
                                   <span class="text-yellow-500">★★★★☆</span>
                              </div>
                              <h3 class="text-lg font-semibold text-bakery-brown mb-2">Pâine Integrală</h3>
                              <p class="text-gray-600 text-sm mb-4">Bogată în fibre, ideală pentru o dietă sănătoasă</p>
                              <div class="flex justify-between items-center">
                                   <span class="text-xl font-bold text-bakery-gold">15.00 MDL</span>
                                   <button class="bg-bakery-gold text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition duration-300">
                                        <i class="fas fa-cart-plus"></i>
                                   </button>
                              </div>
                         </div>
                    </div>

                    <!-- Product 3 -->
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
                         <img src="/placeholder.svg?height=250&width=300" alt="Croissant" class="w-full h-48 object-cover">
                         <div class="p-6">
                              <div class="flex items-center justify-between mb-2">
                                   <span class="bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full">Stoc limitat</span>
                                   <span class="text-yellow-500">★★★★★</span>
                              </div>
                              <h3 class="text-lg font-semibold text-bakery-brown mb-2">Croissant cu Unt</h3>
                              <p class="text-gray-600 text-sm mb-4">Croissant franțuzesc autentic, crocant și delicios</p>
                              <div class="flex justify-between items-center">
                                   <span class="text-xl font-bold text-bakery-gold">8.50 MDL</span>
                                   <button class="bg-bakery-gold text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition duration-300">
                                        <i class="fas fa-cart-plus"></i>
                                   </button>
                              </div>
                         </div>
                    </div>

                    <!-- Product 4 -->
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
                         <img src="/placeholder.svg?height=250&width=300" alt="Baguette" class="w-full h-48 object-cover">
                         <div class="p-6">
                              <div class="flex items-center justify-between mb-2">
                                   <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">Disponibil</span>
                                   <span class="text-yellow-500">★★★★☆</span>
                              </div>
                              <h3 class="text-lg font-semibold text-bakery-brown mb-2">Baguette Franceză</h3>
                              <p class="text-gray-600 text-sm mb-4">Pâine lungă tradițională, perfectă pentru sandvișuri</p>
                              <div class="flex justify-between items-center">
                                   <span class="text-xl font-bold text-bakery-gold">10.00 MDL</span>
                                   <button class="bg-bakery-gold text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition duration-300">
                                        <i class="fas fa-cart-plus"></i>
                                   </button>
                              </div>
                         </div>
                    </div>

                    <!-- Product 5 -->
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
                         <img src="/placeholder.svg?height=250&width=300" alt="Ecler" class="w-full h-48 object-cover">
                         <div class="p-6">
                              <div class="flex items-center justify-between mb-2">
                                   <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">Disponibil</span>
                                   <span class="text-yellow-500">★★★★★</span>
                              </div>
                              <h3 class="text-lg font-semibold text-bakery-brown mb-2">Ecler cu Cremă</h3>
                              <p class="text-gray-600 text-sm mb-4">Ecler clasic cu cremă de vanilie</p>
                              <div class="flex justify-between items-center">
                                   <span class="text-xl font-bold text-bakery-gold">18.00 MDL</span>
                                   <button class="bg-bakery-gold text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition duration-300">
                                        <i class="fas fa-cart-plus"></i>
                                   </button>
                              </div>
                         </div>
                    </div>

                    <!-- Product 6 -->
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
                         <img src="/placeholder.svg?height=250&width=300" alt="Tort" class="w-full h-48 object-cover">
                         <div class="p-6">
                              <div class="flex items-center justify-between mb-2">
                                   <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">La comandă</span>
                                   <span class="text-yellow-500">★★★★★</span>
                              </div>
                              <h3 class="text-lg font-semibold text-bakery-brown mb-2">Tort Personalizat</h3>
                              <p class="text-gray-600 text-sm mb-4">Tort realizat la comandă pentru evenimente speciale</p>
                              <div class="flex justify-between items-center">
                                   <span class="text-xl font-bold text-bakery-gold">120.00 MDL</span>
                                   <button class="bg-bakery-gold text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition duration-300">
                                        <i class="fas fa-cart-plus"></i>
                                   </button>
                              </div>
                         </div>
                    </div>

                    <!-- Add more products as needed -->
               </div>

               <!-- Pagination -->
               <div class="flex justify-center mt-12">
                    <nav class="flex space-x-2">
                         <button class="px-4 py-2 bg-gray-200 text-gray-600 rounded-lg hover:bg-bakery-gold hover:text-white transition">Anterior</button>
                         <button class="px-4 py-2 bg-bakery-gold text-white rounded-lg">1</button>
                         <button class="px-4 py-2 bg-gray-200 text-gray-600 rounded-lg hover:bg-bakery-gold hover:text-white transition">2</button>
                         <button class="px-4 py-2 bg-gray-200 text-gray-600 rounded-lg hover:bg-bakery-gold hover:text-white transition">3</button>
                         <button class="px-4 py-2 bg-gray-200 text-gray-600 rounded-lg hover:bg-bakery-gold hover:text-white transition">Următor</button>
                    </nav>
               </div>
          </div>
     </section>
</div>
