@{
     ViewData["Title"] = "Soluții pentru Brutării";
}

<div class="bg-gray-50 min-h-screen">
     <!-- Header -->
     <section class="bg-bakery-cream py-16">
          <div class="max-w-7xl mx-auto px-4 text-center">
               <h1 class="text-4xl md:text-5xl font-bold text-bakery-brown mb-4">Soluții Complete pentru Brutării</h1>
               <p class="text-xl text-gray-700 max-w-3xl mx-auto">
