@{
     ViewBag.Title = "Login";
}

<div class="container mt-5">
     <div class="row justify-content-center">
          <div class="col-md-6 col-lg-5">
               <div class="card shadow-lg p-4">
                    <div class="card-body">
                         <h2 class="card-title text-center mb-4">Autentificare</h2>

                         <div class="row justify-content-center">
                              <div class="col-12 col-sm-10 col-md-10">
                                   @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                                   {
                                        <div class="form-group mb-3">
                                             <label for="username" class="form-label">Nume Utilizator</label>
                                             <input type="text" class="form-control" id="username" name="username" placeholder="Introduceți numele de utilizator" required />
                                        </div>

                                        <div class="form-group mb-4">
                                             <label for="password" class="form-label">Parolă</label>
                                             <input type="password" class="form-control" id="password" name="password" placeholder="Introduceți parola" required />
                                        </div>

                                        <div class="d-grid gap-2">
                                             <button type="submit" class="btn btn-primary btn-lg">Autentificare</button>
                                        </div>
                                   }
                              </div>
                         </div>
                         <!-- Sfârșitul secțiunii noi de centrare a formularului -->
                         @* Mesaj de Eroare (dacă există) *@
                         @if (!string.IsNullOrEmpty(ViewBag.Error))
                         {
                              <div class="alert alert-danger text-center mt-3" role="alert">
                                   @ViewBag.Error
                              </div>
                         }

                         @* Link către pagina de înregistrare *@
                         <div class="text-center mt-4">
                              <p>Nu ai cont? <a href="/Account/Register" class="text-decoration-none">Înregistrează-te aici!</a></p>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</div>